@model EMP.Models.Employee

<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="Edit" asp-controller="Employee" method="post">

            <div class="form-group">
                <input type="hidden" asp-for="EmpId" />
                <label asp-for="EmpName"></label>
                <input asp-for="EmpName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="MobileNo"></label>
                <input asp-for="MobileNo" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Update"
                       class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


