<partial name="_CreatePage" model="new Employee()" />

@model IEnumerable<EMP.Models.Employee>


<table class="table table-bordered">
    <tr>
        <th>EmpName</th>
        <th>Gender</th>
        <th>City</th>
        <th>Salary</th>
        <th>MobileNo</th>
    </tr>
    @foreach (var list in Model)
    {
        <tr>
            <td>@list.EmpName</td>
            <td>@list.Gender</td>
            <td>@list.City</td>
            <td>@list.Salary</td>
            <td>@list.MobileNo</td>
            <td>
                <a asp-action="Edit" asp-controller="Employee" class="btn btn-primary" asp-route-id="@list.EmpId"
                   onclick="return confirm('Are you sure to update this record')">Edit</a>

                <a asp-action="Details" asp-controller="Employee" class="btn btn-warning" asp-route-id="@list.EmpId">Details</a>

                <a asp-action="Delete"
                   asp-controller="Employee" class="btn btn-danger" asp-route-id="@list.EmpId" onclick="return confirm('Are you sure to delete this record')">Delete</a>

            </td>

        </tr>
    }
</table>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

